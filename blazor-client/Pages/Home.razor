@page "/"
@inject NavigationManager Navigation

<div class="homepage">
    <header class="text-center">
        <h1 class="display-4">🚚 FreightFlow Cargo Transportation System</h1>
        <p class="lead">Streamlining cargo management for your business.</p>
        <hr class="my-4">
    </header>

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h3 class="text-center mb-4">Explore the System</h3>
                <div class="list-group">
                    @foreach (var item in NavigationItems)
                    {
                        <a href="@item.Path" 
                           class="list-group-item list-group-item-action">
                            <i class="@item.Icon"></i> @item.Title
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .homepage {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }
    header {
        margin-bottom: 2rem;
        padding: 2rem 1rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
    .list-group a {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.1rem;
    }
    .list-group-item {
        border: 1px solid #ddd;
        transition: background-color 0.3s, transform 0.2s;
    }
    .list-group-item:hover {
        background-color: #e9ecef;
        transform: translateY(-2px);
    }
    .bi {
        font-size: 1.5rem;
        color: #0d6efd;
    }
</style>

@code {
    private List<NavigationItem> NavigationItems { get; set; } = new List<NavigationItem>
    {
        new NavigationItem("Manage Cargos", "bi bi-box", "/cargos"),
        new NavigationItem("Manage Clients", "bi bi-person", "/clients"),
        new NavigationItem("Manage Drivers", "bi bi-people", "/drivers"),
        new NavigationItem("Manage Orders", "bi bi-receipt", "/orders"),
        new NavigationItem("Manage Routes", "bi bi-map", "/routes"),
        new NavigationItem("Manage Vehicles", "bi bi-car-front", "/vehicles"),
        new NavigationItem("Manage Users", "bi bi-people", "/users")
    };
}